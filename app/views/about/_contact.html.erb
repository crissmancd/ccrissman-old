<section id="contact" class="page">
  <div class="content clearfix">

    <header class="section-heading">
      <h1>Get in touch</h1>
    </header>

    <section class="contact-form">
      <%= form_for @message, :url => root_path, :remote => true do |f| %>
        <fieldset>
          <%= f.label :name, "First and Last Name" %>
          <%= f.text_field :name %>

          <%= f.label :email, "Email" %>
          <%= f.email_field :email %>

          <%= f.label :content, "Message" %>
          <%= f.text_area :content %>

          <%= f.submit "Send me a message" %>

        </fieldset>
      <% end %>

      <div id="sendingMessage" class="statusMessage"><p>Sending your message&hellip;</p></div>
      <div id="successMessage" class="statusMessage"><p>Thanks for sending your message!</p><p>I&rsquo;ll get back to you shortly.</p></div>
      <div id="failureMessage" class="statusMessage"><p>There was a problem sending your message.</p><p>Please try again.</p></div>
      <div id="incompleteMessage" class="statusMessage"><p>Please complete all the fields in the form before sending.</p></div>
    </section> <!-- end contact form -->

    <section class="follow">
      <p class="contact-info">
        <a href="tel:8054587182" class="phone">805.458.7182</a>
        <a href="mailto:cdcrissman@gmail.com" class="email">cdcrissman@gmail.com</a>
        <a href="http://www.github.com/crissmancd" class="github">Github</a>
      </p>
      <ul class="line">
        <li class="unit size1of4"><a href="http://www.twitter.com/crissmancd" class="twitter" title="Twitter"><img src="http://ccrissman.s3.amazonaws.com/images/h/twitter-icon.png" alt="Twitter" /></a></li>
        <li class="unit size1of4"><a href="http://www.linkedin.com/in/ccrissman" class="linked-in" title="LinkedIn"><img src="http://ccrissman.s3.amazonaws.com/images/h/linkedin-icon.png" alt="LinkedIn" /></a></li>
        <li class="unit size1of4"><a href="http://www.facebook.com/crissman" class="facebook" title="Facebook"><img src="http://ccrissman.s3.amazonaws.com/images/h/facebook-icon.png" alt="Facebook" /></a></li>
        <li class="unit size1of4"><a href="http://suda.co.uk/projects/X2V/get-vcard.php?uri=http://www.ccrissman.com/" class="vcard" title="Download vCard"><img src="http://ccrissman.s3.amazonaws.com/images/h/vcard-icon.png" alt="Download vCard" /></a></li>
      </ul>
    </section> <!-- end contact links -->

  </div>
</section>  <!-- end contact -->